FROM node:18

# Establecer el directorio de trabajo dentro del contenedor
WORKDIR /app

# Copiar s√≥lo los archivos necesarios para instalar dependencias
COPY package*.json ./
# Instalar dependencias indicadas en package.json
RUN npm install

# Copiar todos los archivos del contexto (definido en el docker-compose) al workdir del contenedor
COPY . .

# Exponer el puerto
EXPOSE 5173

# Comando de arranque. Es sobreescribido por el comando definido en docker-compose
CMD ["npm", "run", "dev"]